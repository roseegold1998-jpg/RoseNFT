<body>
<div class="app">
  <div class="card">
    <h1>Multiple Choice Quiz</h1>
    <div id="quiz-container"></div>
    <button id="nextBtn" class="btn">Next</button>
    <div id="score" class="result"></div>
  </div>
</div>
<script>
const questions = [
  {q:'Which consensus algorithm does XOS use?', opts:['Pos','Pow asic','Pow non_asic'], answer:0},
  {q:'What hardware is needed to run a full node?', opts:['Hi performance server','Mining rig','Regular computer or Raspberry Pi'], answer:2},
  {q:'Which XOS advantage compared to POW-era Ethereum is incorrect?', opts:['stronger intercontinental propagation','smaller full nodes','ASIC resistant'], answer:2}
];

let currentIndex = 0;
let score = 0;

const container = document.getElementById('quiz-container');
const nextBtn = document.getElementById('nextBtn');
const scoreEl = document.getElementById('score');

function loadQuestion(){
  container.innerHTML = '';
  scoreEl.textContent = '';
  const q = questions[currentIndex];
  const qEl = document.createElement('div'); qEl.className='question'; qEl.textContent = q.q;
  const ul = document.createElement('ul'); ul.className='options';
  q.opts.forEach((opt,i)=>{
    const li = document.createElement('li'); li.textContent = opt;
    li.addEventListener('click',()=>{
      [...ul.children].forEach(c=>c.classList.remove('selected'));
      li.classList.add('selected');
    });
    ul.appendChild(li);
  });
  container.appendChild(qEl);
  container.appendChild(ul);
  if(currentIndex === questions.length-1){ nextBtn.textContent='Finish'; }
}

nextBtn.addEventListener('click',()=>{
  const selected = document.querySelector('.options li.selected');
  if(!selected) return alert('Please select an option');
  const answerIndex = [...selected.parentNode.children].indexOf(selected);
  if(answerIndex === questions[currentIndex].answer){ score++; }
  currentIndex++;
  if(currentIndex < questions.length){ loadQuestion(); }
  else{
    container.innerHTML = '<h2>Quiz Completed</h2>';
    nextBtn.disabled = true;
    scoreEl.textContent = `Your score: ${score} out of ${questions.length}`;
  }
});

loadQuestion();
</script>
</body>
</html>
